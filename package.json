{
  "name": "@reallyland/tools",
  "version": "0.2.0",
  "description": "A collection of opinionated tools for the Reallyland projects",
  "keywords": [
    "changelog",
    "changeset-changelog",
    "changeset",
    "changesets-changelog",
    "changesets",
    "really",
    "reallyland",
    "shell",
    "tool",
    "tools"
  ],
  "homepage": "https://github.com/reallyland/tools",
  "repository": {
    "type": "git",
    "url": "git@github.com:reallyland/tools.git"
  },
  "funding": "https://github.com/motss/lit-ntml?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "Rong Sen Ng (motss)",
    "email": "wes.ngrongsen@gmail.com",
    "url": "https://github.com/motss"
  },
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./changesets-changelog": {
      "types": "./changesets-changelog/types.d.ts",
      "import": "./changesets-changelog/changesets-changelog.js",
      "default": "./changesets-changelog/changesets-changelog.js"
    },
    "./changesets-changelog/*": "./changesets-changelog/*",
    "./dist/*": "./dist/*"
  },
  "main": "./index.js",
  "module": "./index.js",
  "typings": "./index.d.ts",
  "files": [
    ".editorconfig",
    ".gitattributes",
    ".github/**/*.yml",
    ".gitignore",
    ".npmrc",
    "**/*.commitlintrc.json",
    "**/*.d.ts.map",
    "**/*.d.ts",
    "**/*.eslintrc.json",
    "**/*.js.map",
    "**/*.js",
    "**/*.nano-staged.json",
    "**/*.sh",
    "**/*.simple-git-hooks.json",
    "**/*tsconfig.json",
    "postinstall.*",
    "!**/*bench*/**/*.*",
    "!**/*demo*/**/*.*",
    "!**/*mock*/**/*.*",
    "!**/node_modules/**/*.*",
    "!**/*test*/**/*.*",
    "!tsconfig.json"
  ],
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bench": "vitest bench",
    "build": "tsc --build ./tsconfig-build.json",
    "clean": "sh ./cleanup.sh",
    "postinstall": "sh ./postinstall.sh",
    "lint": "sh ./lint-build.sh -c ./.eslintrc.json -s 'packages/**/*.ts'",
    "lint-commit": "sh ./lint-commit.sh",
    "lint:build": "sh ./lint-build.sh -c ./browser/.build.eslintrc.json -s 'packages/**/*.ts'",
    "pre-commit2": "package-check && nano-staged --config ./.nano-staged.json && tsc --noEmit",
    "pre-commit": "package-check",
    "prepublishOnly": "npm run lint:build && npm run build",
    "release": "npm run prepublishOnly && changeset publish",
    "test": "vitest --coverage",
    "version": "changeset version"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run pre-commit",
    "commit-msg": "npm run lint-commit"
  },
  "optionalDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/config-conventional": "^17.2.0",
    "@skypack/package-check": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.28.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-regexp": "^1.11.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "nano-staged": "^0.8.0",
    "typescript": "^4.9.3"
  },
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "nano-staged2": {
    "*.ts": [
      "npm run lint:build -- -f 1",
      "git add"
    ]
  }
}
